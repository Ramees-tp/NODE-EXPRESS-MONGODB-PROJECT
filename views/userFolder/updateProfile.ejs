<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
       
         body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #acb9bb;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            flex-direction: column;
        }
        form {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 16px;
            max-width: 400px;
            width: 100%;
            box-sizing: border-box;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        label {
            display: block;
            margin-bottom: 3px;
            color: #555;
        }
        input {
            width: 100%;
            padding: 9px;
            margin-bottom: 13px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #e2dfdf;
        }
        select{
            width: 100%;
            padding: 9px;
            margin-bottom: 13px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #e2dfdf;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-right: 8px;
        }
        a{
            background-color: #4CAF50;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-right: 8px;
            text-decoration: none;
        }
       
        button.secondary {
            background-color: #555;
        }
        div {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        p {
            text-align: center;
            color: #81ff47;
            margin: 0;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Update Profile</h1>
    <form action="/users/updateUser" method="post" onsubmit="return proUp()">
        <p style="display: flex;justify-content: center;align-items: center;"></p>
        <label for="FirstName">FulltName</label>
        <input type="text" id="fname" name="fname" placeholder="" value="<%=user.name %>" required>
        <label for="UserEmail">UserEmail</label>
        <input type="email" id="userEmail" name="email" placeholder="" value="<%=user.email %>" required>
        <label for="dateObirth">Date of Birth</label>
        <input type="date" id="dateObirth" name="dateObirth" placeholder="please enter dateObirth" value="<%=details?.dateObirth %>" required>
        <label for="Gender">Gender</label>
        <!-- <input type="text" id="gender" name="gender" placeholder="please enter gender" value="<%=details?.gender %>" required> -->
        <select id="gender" name="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        <label for="Age">Age</label>
        <input type="number" id="age" name="age" placeholder="please enter age" value="<%=details?.age %>" required>
        <label for="Contact">Contact</label>
        <input type="number" id="num" name="num" placeholder="please enter phone number" value="<%=details?.number %>" required>
        <span style="color: red;margin-left: 14%;" id="message"></span>
        <div>
            <button type="submit">Update Profile</button>
            <a href="/users/userHome">Back to Home</a>
        </div>
    </form>
</body>
<script>
    function proUp(){
        const phoneNumber = document.getElementById('num').value;
        const phoneRegex = /^\d{10}$/;
        var mspan=document.getElementById("message")

        if (!phoneRegex.test(phoneNumber)) {
                mspan.innerText="Please enter valid phone number!"
                return false
            } else {
                mspan.innerText=" "
                return true
            }
    }
</script>
</html>

