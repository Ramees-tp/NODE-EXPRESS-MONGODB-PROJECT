    <style>
      * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    /* background-color: rgb(200, 142, 254); */
    background-color: rgb(198, 219, 219);
}

.item-container {
    background-color: #fff;
    width: 16rem;
    margin: 1rem;
    padding: 1rem;
    border-radius: 1rem;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s;
    
}
.item-container:hover {
  transform: scale(1.03);
}



.top-left-logo {
    width: 60px;
    margin-left: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
}



.top-right-cart {
    font-size: 1.4rem;
    margin-right: 1rem;
}

.item-heading {
    text-transform: capitalize;
    font-size: 22px;
    font-weight: bolder;
    height: 50px;
}

.item-description {
    margin: .5rem 0;
    font-size: .9rem;
    font-weight: 200;
    height: 50px;
    /* white-space: nowrap; */
    overflow: hidden;
    text-overflow: ellipsis;
    text-wrap: wrap;
}

.item-price {
    text-align: center;
    font-size: 1.7rem;
    margin-bottom: 1rem;
}

.item-price sup {
    color: green;
}

.rating i {
    color: rgb(200, 142, 254);
    margin-bottom: 1rem;
}

.item-cart-btn {
    border: none;
    background-color: transparent;
    margin: 0 auto;
    width: 100%;
    border: 1px;
    font-weight: bold;
    padding: .5rem 1rem;
    background-color: rgb(200, 142, 254);
    color: #fff;
    border-radius: 2rem;
    font-size: 1.2rem;
    font-weight: 200;
    position: relative;
    cursor: pointer;
    transition: all .3s linear;
}

.item-cart-btn:hover {
    color: #fff;
    background-color: rgb(160, 110, 206);
}
.card-img-top {
  width: 100%;
  height: 170px;
  object-fit: cover;
  border-radius: 5px;
}
.h1 {
  text-align: center;
  color: #333;
  font-weight: bold;
  font-size: 25px;
}
.header{
  text-align: center;
  padding: 20px;
  background-color: #5a3f3f;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20px;
  padding-right: 20px;  
  margin-bottom: 10px;
  margin-top: 0px;
  width: 100%;
  /* margin: auto; */
}
a{
  padding: 4px;
  background-color: rgb(177, 173, 170);
  text-decoration: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  font-size: smaller;
  font-weight: bold;
  color: rgb(32, 31, 3)
}
