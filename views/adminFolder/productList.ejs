  <body>


    <header class="header">
      <h1 style="margin-left: 38%">All Added Products</h1>
      <a href="/admin/ahome" type="button"> Home</a>
    </header>
    <div style="display: flex;flex-wrap: wrap;justify-content: center;" >
      <% allproducts.forEach(products => { %>
      <div class="item-container">
        
        <div class="main-item">
          <img
            class="card-img-top"
            src="<%= products.image %>"
            alt="<%= products.name %>"
          />
        </div>
        <div style="display: flex; justify-content: space-between">
          <p class="item-heading"><%= products.name %></p>
          <div class="top-right-cart">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
        </div>
        <p class="item-description"><%= products.description %></p>
        <ul class="rating">
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star-half-stroke"></i>
        </ul>
        <p class="item-price"><sup>$</sup><%= products.price %>/-</p>
        
        <div style="display: flex;padding: 5px;gap: 5px;">
          <form style="width: 50%;" method="post" action="/admin/delPro/<%=products._id %>">
            <button class="item-cart-btn" type="submit">Delete</button>
          </form>
          <form style="width: 50%;" method="post" action="/admin/editPro/<%=products._id %>">
            <button class="item-cart-btn" type="submit">Update</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
